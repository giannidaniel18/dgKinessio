<section class="section ">
    <div id="signIn" class="row">
        
        <div class="col-md-6 mx-auto my-auto">
            {{>errors}}
            <div class="card shadow border">
                
                <div class="card-header"><h4>Registro de usuario</h4></div>
                <div class="card-body">
                    <form action="/users/signup" method="POST">
                        <div class="form-row">                         
                            <div class="col-6 form-group">
                                <label for="nombre">Nombre</label>
                                <input name="nombre" type="text" class="form-control" placeholder="Nombre" value="{{nombre}}"> 
                            </div>
                            <div class="col-6 form-group ">
                                <label for="apellido">Apellido</label>
                                <input name="apellido" type="text" class="form-control" placeholder="Apellido" value="{{apellido}}">
                            </div>
                            <div class="col-6 form-group ">
                                <label for="dni">DNI</label>
                                <input name="dni" type="number" class="form-control" placeholder="Nro de documento" value="{{dni}}">
                            </div>
                            <div class="col-6 form-group ">
                                <label for="tel">Telefono de contacto</label>
                                <input name="tel" type="number" class="form-control" placeholder="+54 9 113455XXXX" value="{{tel}}">
                            </div>
                            <div class="col-12 form-group">
                                <label for="email">Direccion de correo electronico</label>
                                <input name="email" type="email" class="form-control" placeholder="example@email.com.ar" value="{{email}}">
                            </div>
                            <div class="col-12 form-group">
                                <label for="password">Contraseña</label>
                                <input name="password" type="password" class="form-control" value="{{password}}">
                            </div>
                            <div class="col-12 form-group">
                                <label for="confirmpassword">Repetir contraseña</label>
                                <input name="confirmpassword" type="password" class="form-control" value="{{confirmpassword}}">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Registrarse <i class="fas fa-lock-open"></i></button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>


</section>